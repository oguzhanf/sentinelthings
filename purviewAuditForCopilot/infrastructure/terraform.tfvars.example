# Terraform Variables for Microsoft 365 Copilot Audit Log Ingestion Solution
# Copy this file to terraform.tfvars and update with your values

# Azure Configuration
resource_group_name = "rg-sentinel-copilot"
location           = "East US"

# Logic App Configuration
logic_app_name = "copilot-audit-ingestion"

# Azure AD Configuration
tenant_id = "your-tenant-id-here"

# Log Analytics Workspace Configuration
workspace_resource_id = "/subscriptions/your-subscription-id/resourceGroups/your-rg/providers/Microsoft.OperationalInsights/workspaces/your-workspace"
workspace_id         = "your-workspace-guid-here"
workspace_key        = "your-workspace-primary-key-here"

# Logic App Trigger Configuration
recurrence_frequency = "Hour"
recurrence_interval  = 1

# Security Configuration
enable_system_assigned_identity = true

# Resource Tags
tags = {
  Environment = "Production"
  Purpose     = "CopilotAuditIngestion"
  Owner       = "SecurityTeam"
  Project     = "SentinelIntegration"
  CostCenter  = "IT-Security"
}
